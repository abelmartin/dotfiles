alias ..="cd .."
alias s="sudo"
alias l="ls -hal"
alias ls="ls -Gp"
alias ll="ls -laGp"
alias df="df -h"
alias du="du -h"
alias grep="grep --color=auto"

alias ws="cd ~/workspace"
alias haw="cd ~/workspace/howaboutwe"
alias coup="cd ~/workspace/couples"
alias cdc="cd ~/workspace/couples"
alias cda="cd ~/workspace/couples-api"
alias cdm="cd ~/workspace/couples-models"

alias u="bundle exec unicorn_rails -p 3000 -D"

alias reset-authors="git commit --amend --reset-author -C head"

alias gco="git checkout"
alias gap="git add -p"
alias gd="git diff"
alias gdc="git diff --cached"
alias gst="git status"
alias gc="git commit --verbose"
alias gp="git push"
alias gpr="git pull --rebase"
alias gpf="git push -f"
alias gb="git branch"

alias pg_start="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pg_stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"
